{
  "title": "activity-streams-experiment",
  "name": "activity-streams",
  "version": "0.0.1",
  "description": "A feed-based view on user history",
  "repository": "mozilla/activity-streams",
  "bugs": {
    "url": "https://github.com/mozilla/activity-streams/issues"
  },
  "author": "Mozilla",
  "engines": {
    "firefox": ">=45.0b1"
  },
  "main": "lib/main.js",
  "license": "MPL-2.0",
  "keywords": [
    "mozilla",
    "firefox",
    "activity-streams"
  ],
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-core": "^6.4.5",
    "babel-loader": "^6.2.1",
    "babel-plugin-transform-es2015-destructuring": "^6.4.0",
    "babel-plugin-transform-es2015-parameters": "^6.4.5",
    "babel-plugin-transform-strict-mode": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-plugin-mozilla": "0.0.3",
    "jpm": "^1.0.5",
    "json-loader": "^0.5.4",
    "npm-run-all": "^1.5.1",
    "webpack": "^2.0.6-beta",
    "webpack-notifier": "^1.2.1",
    "yamljs": "^0.2.4",
    "yamscripts": "0.0.1"
  },
  "scripts": {
    "start": "npm-run-all --parallel start:*",
    "start:webpack": "webpack -w",
    "start:jpm": "jpm run /usr/bin/firefox --prefs dev-prefs.json",
    "package": "jpm xpi && mv @activity-streams-$npm_package_version.xpi dist/activity-streams-$npm_package_version.xpi",
    "test": "npm-run-all test:*",
    "test:lint": "eslint .",
    "test:jpm": "jpm test",
    "help": "yamscripts help",
    "yamscripts": "yamscripts compile",
    "__": "# NOTE: THESE SCRIPTS ARE COMPILED!!! EDIT yamscripts.yml instead!!!"
  }
}